<%- include('../partials/header') %>

<h1>New Cluck</h1>

<form action="/clucks" method="POST">
  <div class="form-group">
    <h6>Content</h6>
    <textarea
      class="form-control"
      placeholder="Whatchoo cluckin' 'bout?"
      name="content"
      rows="8" cols="60"
    ></textarea>
  </div>

  <div class="form-group">
    <h6>Image Url</h6>
    <input
      class="form-control"
      type="text"
      name="image_url"
      placeholder="e.g. http://imgur.com/myPic.jpg"
    >
  </div>

  <input
    class="btn btn-outline-dark"
    type="submit"
    value="Submit"
    name ="createdAt";
  >
  
<%- include('../partials/footer') %>
